<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/learn_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/splash" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/learn_button"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/learn_button"
        android:background="@android:color/transparent"
        android:contentDescription="@string/play_button"
        android:src="@drawable/play_pipe" />

    <ImageButton
        android:id="@+id/learn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_logo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/play_button"
        android:src="@drawable/play_flyer" />

</RelativeLayout>